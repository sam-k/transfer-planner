{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/secrets",
  "title": "Secrets",
  "description": "Secrets to use in this application.",
  "type": "object",
  "properties": {
    "secrets": {
      "description": "All secrets for this application.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "ID corresponding to this secret.",
            "type": "string",
            "pattern": "^[ -~]+$"
          },
          "description": {
            "description": "Description for this secret.",
            "type": "string"
          },
          "urlDescription": {
            "description": "URL where this secret is from, for informational purposes only.",
            "type": "string",
            "format": "uri"
          },
          "type": {
            "description": "Type of this secret.",
            "enum": ["api_key"]
          },
          "lastUpdated": {
            "description": "Date on which this secret was last updated.",
            "type": "string",
            "format": "date"
          },
          "secret": {
            "description": "The secret to use.",
            "type": "string"
          }
        },
        "required": [
          "id",
          "secret"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["secrets"],
  "additionalProperties": false
}
